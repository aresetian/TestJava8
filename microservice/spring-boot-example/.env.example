# Greeting Microservice Environment Variables
# Copy this file to .env and update values for your environment

# Application Configuration
SPRING_PROFILES_ACTIVE=local
SERVER_PORT=8080
DEFAULT_LANGUAGE=en

# Security Configuration - CHANGE THESE IN PRODUCTION!
GREETING_USER=greeting-user
GREETING_USER_PASSWORD=your-secure-user-password-here
GREETING_ADMIN=greeting-admin
GREETING_ADMIN_PASSWORD=your-secure-admin-password-here

# Rate Limiting
RATE_LIMIT=100

# Database Configuration (if needed in future)
# DATABASE_URL=jdbc:postgresql://localhost:5432/greeting_db
# DATABASE_USERNAME=greeting_user
# DATABASE_PASSWORD=your-db-password-here

# External Services (if needed in future)
# EXTERNAL_API_KEY=your-api-key-here
# EXTERNAL_API_URL=https://api.example.com

# Monitoring and Observability
# OTEL_SERVICE_NAME=greeting-microservice
# OTEL_EXPORTER_OTLP_ENDPOINT=http://localhost:4317

# Production-specific settings
# CORS_ALLOWED_ORIGINS=https://yourdomain.com,https://api.yourdomain.com
# LOG_LEVEL=WARN
# ACTUATOR_ENABLED=false

# SSL/TLS Configuration (for production)
# SERVER_SSL_ENABLED=true
# SERVER_SSL_KEY_STORE_PATH=classpath:keystore.p12
# SERVER_SSL_KEY_STORE_PASSWORD=your-keystore-password
# SERVER_SSL_KEY_STORE_TYPE=PKCS12